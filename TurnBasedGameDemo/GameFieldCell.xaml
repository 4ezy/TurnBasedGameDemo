<UserControl x:Class="TurnBasedGameDemo.GameFieldCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TurnBasedGameDemo"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Rectangle x:Name="rect" Fill="LightBlue" Stroke="CornflowerBlue"/>
        <Image x:FieldModifier="private" x:Name="img"/>
        <ProgressBar x:Name="pb" x:FieldModifier="private" Minimum="0"
                     Grid.Row="1" Margin="1"/>
    </Grid>
</UserControl>
